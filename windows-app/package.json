{
  "name": "GameTracker",
  "version": "1.0.2",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "rebuild": "electron-rebuild",
    "build": "npm run rebuild && electron-builder --win"
  },
  "devDependencies": {
    "electron": "^32.0.2",
    "electron-builder": "^25.0.5",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.example.app",
    "productName": "GameTracker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "electron-log": "^5.2.0",
    "node-powershell": "^5.0.1",
    "sqlite3": "^5.1.7",
    "win-version-info": "^6.0.1"
  }
}
